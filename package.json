{
  "name": "startup",
  "version": "1.0.0",
  "description": "setup for nodejs",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist",
    "prestart": "npm run build",
    "build": "rimraf dist && babel src -D --out-dir dist",
    "lint": "eslint src test; exit 0",
    "lint:fix": "eslint src test --fix; exit 0",
    "migrate": "cd src/; migrate-mongo up",
    "rollback": "cd src/; migrate-mongo down",
    "make:migration": "cd src/; migrate-mongo create --file migrate-mongo-config.js",
    "format:md": "prettier --parser markdown --write '*.md'",
    "format:yml": "prettier --parser yaml --single-quote --write '*.{yml,yaml}'",
    "format:code": "prettier --single-quote --print-width 120 --write 'src/**/*.js' 'test/**/*.js'",
    "start:dev": "nodemon --watch .env --watch src --exec babel-node --inspect src --source-maps"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{md,yml,yml,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.6.3",
    "@babel/core": "^7.6.3",
    "@babel/node": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "@hapi/boom": "^8.0.1",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "migrate-mongo": "^6.0.2",
    "mongodb": "^3.3.2",
    "mongoose": "^5.7.4",
    "@hapi/joi": "^15.1.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "helmet": "^3.20.0",
    "http-status-codes": "^1.3.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.13",
    "morgan": "^1.9.1",
    "serve-favicon": "^2.5.0",
    "swagger-jsdoc": "^3.3.0",
    "swagger-ui-dist": "^3.23.4",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.10.0"
  }
}
